scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'monitor_tool'
#    scrape_timeout: 10s
    scrape_interval: 2s # Scrape targets every 2 seconds
    static_configs:
      - targets: ['${MONITOR_TOOL_HOST}:${MONITOR_TOOL_PORT}']

  - job_name: 'mongodb_exporter'
    static_configs:
      - targets: ['${MONGODB_EXPORTER_HOST}:${MONGODB_EXPORTER_PORT}']